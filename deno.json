{
	"tasks": {
		"dev": "deno run -A --watch main.ts",
		"start": "deno run -A main.ts",
		"check": "deno check **/*.ts",
		"lint": "deno lint",
		"fmt": "deno fmt"
	},
	"imports": {
		"@effect/platform": "npm:@effect/platform@^0.84.11",
		"@effect/platform-node": "npm:@effect/platform-node@^0.85.16",
		"@notionhq/client": "npm:@notionhq/client@^2.3.0",
		"@std/assert": "jsr:@std/assert@1",
		"effect": "npm:effect@^3.14.2",
		"ts-toolbelt": "npm:ts-toolbelt@^9.6.0",
		"@/": "./"
	},
	"nodeModulesDir": "auto",
	"lock": false,
	"fmt": {
		"useTabs": false,
		"lineWidth": 100,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": false,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	}
}
